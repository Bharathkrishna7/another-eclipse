package com.TestNG.RealWork;

import org.openqa.selenium.By;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

public class LoginTest extends BaseTest {
	@BeforeMethod()
	public void gotoLoginpage() {
		driver.findElement(By.className("login")).click();
	}
	@Test()
	public void testWithValidCredentials() {
		driver.findElement(By.xpath("//input[@id='email']")).sendKeys("bharathkrishna534@gmail.com");
		driver.findElement(By.xpath("//input[@name='passwd']")).sendKeys("9441044154");
		driver.findElement(By.xpath("//button[@id='SubmitLogin']/span")).click();
		
	}
	@Test()
	public void testWithInValidCredentials() {
		System.out.println("invalid");
		
	}
	@Test()
	public void testWithEmptyCredentials() {
		System.out.println("empty");
		
	}

}
